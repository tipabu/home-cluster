[Unit]
Description=Swift container updater
After=network.target
StartLimitIntervalSec=60
StartLimitBurst=3

[Service]
Type=notify
User=swift
Group=swift
Restart=always
ExecStart=swift-container-updater /etc/swift/container-server.conf.d
ExecStop=bash -c "kill -TERM $MAINPID && tail -f /dev/null --pid $MAINPID"

[Install]
WantedBy=multi-user.target
